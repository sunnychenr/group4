<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group4.yiqihouse.MainActivity">
    <RelativeLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_menu_layout"></RelativeLayout>
     <LinearLayout
         android:id="@+id/home_menu_layout"
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="55dp"
         android:orientation="horizontal">
         <LinearLayout
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <Button
                 android:id="@+id/home_menu_homebt"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:onClick="homeonclick"
                 android:background="@drawable/main_tab_home_selected"/>
             <TextView
                 android:layout_width="30dp"
                 android:layout_height="12dp"
                 android:gravity="center"
                 android:textSize="8sp"
                 android:textColor="#FF0B9E30"
                 android:text="首页"/>
         </LinearLayout>
         <LinearLayout
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">
             <Button
                 android:id="@+id/home_menu_ownerbt"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:onClick="homeonclick"
                 android:background="@drawable/main_tab_community_normal"/>
             <TextView
                 android:layout_width="30dp"
                 android:layout_height="12dp"
                 android:gravity="center"
                 android:textSize="8sp"
                 android:text="业主说"/>
         </LinearLayout>
         <LinearLayout
             android:layout_weight="1"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <Button
                 android:id="@+id/home_menu_infobt"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:onClick="homeonclick"
                 android:background="@drawable/main_tab_msg_normal"/>
             <TextView
                 android:layout_width="30dp"
                 android:layout_height="12dp"
                 android:gravity="center"
                 android:textSize="8sp"
                 android:text="消息"/>
         </LinearLayout>
         <LinearLayout
             android:layout_weight="1"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <Button
                 android:id="@+id/home_menu_mybt"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:onClick="homeonclick"
                 android:background="@drawable/main_tab_my_normal"/>
             <TextView
                 android:layout_width="30dp"
                 android:layout_height="12dp"
                 android:gravity="center"
                 android:textSize="8sp"
                 android:text="我的"/>
         </LinearLayout>
     </LinearLayout>


</RelativeLayout>
